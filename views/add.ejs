              <input type="text" id="vindicatorContactNum" name="vindicatorContactNum" class="input" placeholder="Contact Number" maxlength="11" required>
              <span class="icon is-small is-left">
                <i class="fas fa-phone"></i>
              </span>
              </div>
          </div>

          <div class="field">
            <label for="vindicatorCNIC" class="label">CNIC Number:</label>
            <div class="control has-icons-left has-icons-right">
              <input type="text" id="vindicatorCNIC" name="vindicatorCNIC" class="input" maxlength="13" placeholder="1710132386724"
                required>
            </div>
          </div>

          <div class="field">
            <label for="vindicatorCurrentAddress" class="label">Current Address:</label>
            <div class="control">
              <textarea id="vindicatorCurrentAddress" name="vindicatorCurrentAddress" class="textarea" placeholder="Street, Village/ City" required></textarea>
            </div>
          </div>

          <div class="field">
            <label for="vindConstTyp" class="label">Constituency Type:</label>
            <div class="control">
              <div class="select">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"
                  id="vindConstTyp" name="vindConstTyp" required>
                          <option value="NA">National Assembly - NA</option>
                          <option value="PK">Provincial Assembly - PK</option>
                      </select>
              </div>
            </div>
          </div>
          <div class="field">
