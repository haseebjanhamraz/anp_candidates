                          <option value="Lower Kohistan">Lower Kohistan</option>
                          <option value="Khyber">Khyber</option>
                      </select>
              </div>
            </div>
          </div>



          <div class="field">
            <label for="constituencyType" class="label">Constituency Type:</label>
            <div class="control">
              <div class="select">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"
                  id="constituencyType" name="constituencyType" required>
                          <option value="NA">National Assembly - NA</option>
                          <option value="PK">Provincial Assembly - PK</option>
                      </select>
              </div>
            </div>
          </div>
          <div class="field">
            <label for="constituency" class="label">Constituency:</label>
            <div class="control has-icons-left has-icons-right">
              <input type="number" id="constituency" name="constituency" maxlength="3" class="input" placeholder="eg; 59" required>
              </span>
            </div>
          </div>
          <div class="field">
            <label for="cnic" class="label">CNIC Number:</label>
            <div class="control has-icons-left has-icons-right">
              <input type="text" id="cnic" name="cnic" class="input" maxlength="13" placeholder="1710132386724"
                required>
            </div>
          </div>

          <div class="field">
            <label for="currentAddress" class="label">Current Address:</label>
            <div class="control">
              <textarea id="currentAddress" name="currentAddress" class="textarea" placeholder="Street, Village/ City" required></textarea>
            </div>
          </div>

          <div class="field">
            <label for="permanentAddress" class="label">Permanent Address:</label>
            <div class="control">
              <textarea id="permanentAddress" name="permanentAddress" class="textarea" placeholder="Street, Village/ City" required></textarea>
            </div>
          </div>
