          <div class="field">
            <label class="label">Candidate Signature?</label>
            <div class="control">
              <label class="radio">
                <input type="radio" name="candidateSign" value="signed"  required checked>
                Yes
              </label>
              <label class="radio">
                <input type="radio" name="candidateSign" value="notAvailable" required>
                No
              </label>
            </div>
          </div>
          <div class="field">
            <label class="label">Suggester Signature?</label>
            <div class="control">
              <label class="radio">
                <input type="radio" name="suggesterSign" value="signed"  required checked>
