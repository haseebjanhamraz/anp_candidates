<%- include('partials/header') %>

    <div class="columns is-flex is-flex-direction-row	">
      <div class="column is-one-quarter is-offset-one-fifth">
        <form action="/add" method="post" enctype="multipart/form-data">


          <div class="field">
            <label for="profileImage" class="label">Profile Image:</label>
            <div class="control">
              <input type="file" id="profileImage" name="profileImage" class="input" required>
            </div>
          </div>
          

          <div class="field">
            <label for="name" class="label">Candidate Name:</label>
            <div class="control">
              <input type="text" id="name" name="name" class="input" required>
            </div>
          </div>

          <div class="field">
            <label for="fathername" class="label">Candidate Father Name:</label>
            <div class="control has-icons-left has-icons-right">
              <input type="text" id="fathername" name="fathername" class="input" placeholder="Text input" required>
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <label for="contactNumber" class="label">Contact Number:</label>
            <div class="control has-icons-left has-icons-right">
              <input type="text" id="contactNumber" name="contactNumber" class="input" placeholder="Contact Number" maxlength="11" required>
              <span class="icon is-small is-left">
                <i class="fas fa-phone"></i>
              </span>
              </div>
          </div>
          <div class="field">
            <label for="district" class="label">District:</label>
            <div class="control">
              <div class="select">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="district"
                  name="district" required>
                          <!-- List of cities in alphabetical order -->
                          <option value="Abbottabad">Abbottabad</option>
