<%- include('partials/header') %>
    <style>
        .signed {
            color: green;
        }

        .not-signed {
            color: red;
        }
    </style>
    <div class="container mt-4">
        <div class="row align-items-start">
            <div class="col border">
                <h2 class="border-bottom p-2 text-muted">Candidate Information</h2>
                <div class="row d-flex justify-content-center">
                <img src="../<%= item.imagePath %>" alt="<%= item.name %>'s Image"
                    class="w-50 mb-3 img-thumbnail rounded-circle border-light shadow-lg p-3 mb-5 bg-body rounded">
                </div>
                <h4 class="text-uppercase fw-bold text-danger">
                    <%= item.name %>
                </h4>
                <% if (item.ticketIssued === 'issued') { %>
                    <span class="badge rounded-pill bg-success mb-2">The party has issued a ticket to this applicant.</span>
                  <% } else { %>
                    <span class="badge rounded-pill bg-danger mb-2">No ticket has been issued to this applicant.</span>
                  <% } %>
                <h6>
                    <span class="text-muted">Father Name:</span>
                    <%= item.fathername %>
                </h6>
                <h6>
                    <span class="text-muted">Constituency:</span>
                    <%= item.constituencyType%>
                        <%= item.constituency %>
                </h6>
                <h6>
                    <span class="text-muted">District:</span>
                    <%= item.district %>
                </h6>
                <h6>
                    <span class="text-muted">Contact Number:</span>
                    <%= item.contactNumber %>
                </h6>
                
                <h6>
                    <span class="text-muted">Current Address:</span>
                    <%= item.currentAddress %>
                </h6>
                <h6>
                    <span class="text-muted">Permanent Address:</span>
                    <%= item.permanentAddress %>
                </h6>

                <% if (user) { %>
                <h6>
                    <span class="text-muted">CNIC#</span>
                    <%= item.cnic %>
                </h6>     
            </div>
            <%- include('components/suggesterInfo') %>
            <%- include('components/vindicatorInfo') %>
        </div>
        <hr>
        <div class="row align-items-start">
            <h1 class="mb-3">Signature Authorities:</h1>
            <div class="col">
                <h6 class="text-muted">Candidate: <span
                    class="sign fs-3 <%= item.candidateSign == 'signed' ? 'signed' : 'not-signed' %>">
                    <%= item.candidateSign %>
                </span> </h6>
                <h6 class="text-muted">Suggester: <span
                    class="sign fs-3 <%= item.suggesterSign == 'signed' ? 'signed' : 'not-signed' %>">
                    <%= item.suggesterSign %>
                </span> </h6>
            </div>
            <div class="col">
                <h6 class="text-muted">Vindicator: <span
                    class="sign fs-3 <%= item.vindicatorSign == 'signed' ? 'signed' : 'not-signed' %>">
                    <%= item.vindicatorSign %>
                </span> </h6>
                <h6 class="text-muted">UC President: <span
                    class="sign fs-3 <%= item.ucPresidentSign == 'signed' ? 'signed' : 'not-signed' %>">
                    <%= item.ucPresidentSign %>
                </span> </h6>
            </div>
            <div class="col">
                <h6 class="text-muted">Tehsil President: <span
                    class="sign fs-3 <%= item.tehsilPresidentSign == 'signed' ? 'signed' : 'not-signed' %>">
                    <%= item.tehsilPresidentSign %>
                </span> </h6>
                <h6 class="text-muted">District President: <span
                    class="sign fs-3 <%= item.districtPresidentSign == 'signed' ? 'signed' : 'not-signed' %>">
                    <%= item.districtPresidentSign %>
                </span> </h6>
            </div>
                <div class="col">
                    <a href="/edit/<%= item._id %>"><button type="button" class="btn btn-primary">Edit</button></a> 
                    <a href="/delete/<%= item._id %>"><button type="button" class="btn btn-danger">Delete</button> </a>
                </div>
            </div>
        </div>
        <% } %>
        
        <!-- 
<h1><%= item.name %></h1>
<img src="../<%= item.imagePath %>" alt="<%= item.name %>'s Image" class="image-preview "> -->
    <%- include('partials/footer') %>