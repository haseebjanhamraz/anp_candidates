<%- include('partials/header') %>
  <div class="bg-white p-4 rounded shadow-md">
    <h1 class="text-2xl font-bold text-gray-800">Edit Item</h1>
    <form action="/edit/<%= item._id %>" method="post">
      <div class="mb-4">
        <label for="name" class="block text-gray-600">Name:</label>
        <input type="text" id="name" name="name" value="<%= item.name %>" class="border w-full p-2">
      </div>
      <div class="mb-4">
        <label for="description" class="block text-gray-600">Description:</label>
        <textarea id="description" name="description" class="border w-full p-2"><%= item.description %></textarea>
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Update</button>
    </form>
  </div>

  <%- include('partials/footer') %>