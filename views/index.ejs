<%- include('partials/header') %>
  <div class="bg-white p-4 rounded shadow-md">
    <h1 class="text-2xl font-bold text-gray-800">Node CRUD App</h1>
    <a href="/add" class="text-blue-500 hover:underline">Add Item</a>
    <ul class="mt-4">
      <% items.forEach(item => { %>
        <li class="mb-2">
          <strong><%= item.name %></strong>: <%= item.description %>
          <a href="/edit/<%= item._id %>" class="text-blue-500 ml-2">Edit</a>
          <a href="/delete/<%= item._id %>" class="text-red-500 ml-2">Delete</a>
        </li>
      <% }); %>
    </ul>
  </div>

  <%- include('partials/footer') %>