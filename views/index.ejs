<%- include('partials/header') %>
    <div class="columns is-multiline">
        <!-- Column 1 -->
        <% if (items.length > 0) { %>
            <% items.forEach(item => { %>
        <div class="column is-one-quarter mt-6">
            <!-- Your content for column 1 goes here -->
            <div class="box">
                <div class="card">
                    <div class="card-image">
                      <figure class="image is-4by3">
                        <img src="<%= item.imagePath %>" alt="<%= item.name %>'s Image">
                      </figure>
                    </div>
                    <div class="card-content">
                      <div class="media">

                        <div class="media-content">
                          <p class="title is-4"><%= item.name %></p>
                          <p class="subtitle is-6"><%= item.description%></p>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
        </div>
        <% }); %>
            <% } else { %>
                <p class="text-gray-500">No candidates available.</p>
              <% } %>
    </div>




<%- include('partials/footer') %>
